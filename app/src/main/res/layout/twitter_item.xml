<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.deekshantkaul.xyz.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height = "250dp"
        android:layout_width = "match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:orientation= "vertical">

        <LinearLayout
            android:layout_height = "25dp"
            android:layout_width = "match_parent"
            android:orientation= "horizontal">
            <TextView
                android:text="Brian Kurek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="18"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="7hrs ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textSize="10dp"
                android:layout_weight="1.91" />
        </LinearLayout>

        <TextView
            android:text="This is an example Facebook post for FuzeFeed!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="15dp"
            android:paddingTop="10dp">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@raw/placeholder"
            android:paddingTop="10dp"
            android:gravity="">
        </ImageView>

        <LinearLayout
            android:layout_height = "match_parent"
            android:layout_width = "match_parent"
            android:orientation= "horizontal">

            <Button
                android:text="Reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:textSize="10dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:text="Like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:textSize="10dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:text="Retweet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b2"
                android:textSize="10dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:text="Send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:textSize="10dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:text="t"
                android:textAllCaps="false"
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:id="@+id/b4"
                android:textSize="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="#ebcfac"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

