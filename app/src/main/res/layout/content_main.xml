<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.illinois.cs465.fuzefeed.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!--Visible when there are no posts in front of it-->
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:text="Posts go here!" />-->

    <LinearLayout
        android:id="@+id/selector_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/feed_item_border"
        android:gravity="center">

        <Button
            android:id="@+id/social_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"/>
        <Button
            android:id="@+id/pro_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional"/>
        <Button
            android:id="@+id/email_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_above="@id/selector_bar"/>
</RelativeLayout>
